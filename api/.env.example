# Configurações de Ambiente para API de OS

# Porta do servidor
PORT=3000

# Chaves de segurança (ALTERAR EM PRODUÇÃO!)
JWT_SECRET=super-secret-jwt-key-change-in-production
QR_SECRET=qr-signing-secret-key-change-in-production

# Base URL da API
API_BASE_URL=http://localhost:3000/api

# Configurações de autenticação
AUTH_TOKEN_EXPIRY=24h
QR_TOKEN_EXPIRY=1h

# Configurações de upload
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=png,jpg,jpeg,pdf

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Configurações de rate limiting
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de banco de dados (para produção)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=os_database
# DB_USER=os_user
# DB_PASSWORD=secure_password

# Configurações de log
LOG_LEVEL=info
LOG_FILE=./logs/app.log